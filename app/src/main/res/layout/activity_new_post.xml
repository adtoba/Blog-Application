<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.blogapplication.NewPostActivity">


    <include layout="@layout/app_bar_main"
        android:id="@+id/new_post_bar"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/add_image"
        android:layout_centerHorizontal="true"
        android:text="Click to add Image"
        android:onClick="addImage"/>


    <ImageButton
        android:id="@+id/add_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/round_edittext_shape"
        android:layout_below="@+id/new_post_bar" />

    <EditText
        android:id="@+id/post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_image"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_edittext_shape"
        android:hint="Post title"
        android:layout_marginEnd="10dp"/>

    <EditText
        android:id="@+id/post_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/post_title"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:background="@drawable/round_edittext_shape"
        android:hint="Post Description"
        android:layout_marginEnd="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="SUBMIT POST"
        android:background="@color/colorPrimary"
        android:layout_margin="10dp"
        android:textColor="@android:color/white"/>

</RelativeLayout>
